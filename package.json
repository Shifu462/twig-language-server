{
  "version": "0.5.0",
  "repository": "https://github.com/Shifu462/twiggy",
  "private": true,
  "scripts": {
    "build": "pnpm run --dir ./packages/vscode build",
    "dev": "pnpm run --dir ./packages/vscode dev",
    "build-grammar-wasm": "pnpm run --dir ./packages/tree-sitter-twig build-wasm",
    "release": "release-it"
  },
  "author": "Mikhail Gunin <gunka462@gmail.com>",
  "license": "Mozilla Public License 2.0",
  "release-it": {
    "hooks": {
      "after:bump": "pnpm run build"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "packages/language-server"
        ],
        "additionalManifests": {
          "versionUpdates": [
            "packages/language-server/package.json",
            "packages/vscode/package.json"
          ],
          "dependencyUpdates": [
            "packages/language-server/package.json",
            "packages/vscode/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": {
      "publish": false
    }
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^6.0.0",
    "@release-it-plugins/workspaces": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "release-it": "^16.1.3"
  }
}
