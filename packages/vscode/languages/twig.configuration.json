{
    "comments": {
        "blockComment": [ "{#", "#}" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["{{", "}}"],
        ["{%", "%}"]
    ],
    "autoClosingPairs": [
        ["{{", "}}"],
        ["{{ ", " "],
        ["{%", "%}"],
        ["{% ", " "],
        ["[", "]"],
        ["{", "}"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""]
    ],
    "wordPattern": "((?<={%\\s+\\w+\\s+)([\"'].+?[\"'])|(\\w+)|([^'\"();{}%$<>/.,=|\\- ]+))",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ]
}
