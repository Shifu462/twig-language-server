{
  "name": "twiggy",
  "displayName": "Twiggy",
  "description": "Twig language support for VS Code",
  "author": "Mikhail Gunin <gunka462@gmail.com>",
  "license": "Mozilla Public License 2.0",
  "version": "0.5.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "publisher": "moetelo",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shifu462/twiggy",
    "directory": "packages/vscode"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "Twig"
  ],
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "icon": "assets/logo.png",
  "scripts": {
    "vscode:prepublish": "",
    "build": "node ./build/index.mjs",
    "dev": "node ./build/index.mjs --dev"
  },
  "contributes": {
    "configuration": {
      "title": "Twiggy",
      "properties": {
        "twiggy.completion.phpBinConsoleCommand": {
          "type": "string",
          "markdownDescription": "Shell command that will be used for PHP command execution. \n\ne.g. `php bin/console` \n\nSee: https://symfony.com/doc/current/templates.html#inspecting-twig-information"
        },
        "twiggy.definition.templatesDirectory": {
          "type": "string",
          "default": "templates",
          "markdownDescription": "Root directory for all .twig templates for definition features support."
        }
      }
    },
    "languages": [
      {
        "id": "twig",
        "aliases": [
          "HTML (Twig)",
          "twig"
        ],
        "extensions": [
          ".twig",
          ".html.twig"
        ],
        "configuration": "./languages/twig.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "twig",
        "scopeName": "text.html.twig",
        "path": "./syntaxes/twig.tmLanguage.json",
        "embeddedLanguages": {
          "text.html.derivative": "html"
        }
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.2.6",
    "@types/vscode": "^1.74.0",
    "esbuild": "^0.19.3",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "twig-language-server": "workspace:*",
    "vscode-languageclient": "^9.0.0"
  }
}
