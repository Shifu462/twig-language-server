{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "preLaunchTask": "${defaultBuildTask}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode",
        "--disable-extensions",
      ],
      "outFiles": [
        "${workspaceFolder}/packages/vscode/dist/*.js"
      ],
    },
    {
      "name": "Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": true,
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": [
        "${workspaceRoot}/packages/vscode/dist/**/*.js"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Extension + Server",
      "configurations": [
        "Extension",
        "Server"
      ],
      "stopAll": true
    }
  ]
}
